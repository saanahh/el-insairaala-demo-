<script>
  let tila = "sairas";

  function asetaTila() {
    tila = "sairas";
    document.getElementById("tila").textContent = "Tila: " + tila;
  }

  function annaHoitoa() {
    if (tila === "sairas") {
      tila = "parantumassa";
    } else if (tila === "parantumassa") {
      tila = "terve";
    }
    document.getElementById("tila").textContent = "Tila: " + tila;
  }
</script>

